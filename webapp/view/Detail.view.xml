<mvc:View
    controllerName="ods4.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout">
    <f:DynamicPage>
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="RFP Details" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
            <VBox>
                <Text text="RFP ID: {RFPID}" />
                <Text text="Description: {Description}" />
                <Text text="Status: {Status}" />
                <!-- Add more fields as needed -->
            </VBox>
            <Table id="materialTable" items="{/Materials}">
                <columns>
                    <Column>
                        <Text text="Material ID" />
                    </Column>
                    <Column>
                        <Text text="Material Description" />
                    </Column>
                    <!-- Dynamic columns will be added here -->
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{MaterialID}" />
                            <Text text="{MaterialDescription}" />
                            <!-- Dynamic cells will be added here -->
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>