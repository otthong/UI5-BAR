<mvc:View
    controllerName="ods4.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout">
    <f:DynamicPage>
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="RFP Details" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
            <VBox>
            <form:SimpleForm
			editable="false"
			layout="ResponsiveGridLayout"
			title="{i18n>basicData}"
			labelSpanL="3"
			labelSpanM="3"
			emptySpanL="4"
			emptySpanM="4"
			columnsL="1"
			columnsM="1" >
			<form:content>
				<Label text="RFP"></Label><Text text="{rfpDetail>/Internalid}" />
                <Label text="Description"></Label><Text text="{rfpDetail>/Description}" />
                <Label text="Status"></Label><Text text="{rfpDetail>/Status}" />
                <!-- Add more fields as needed -->
			</form:content>
		    </form:SimpleForm>
            
            <t:Table id="materialTable" ariaLabelledBy="title" enableColumnFreeze="true" showColumnVisibilityMenu="true" selectionMode="Single">
            </t:Table>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>